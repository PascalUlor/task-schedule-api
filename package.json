{
  "name": "task-schedule-api",
  "version": "1.0.0",
  "description": "A task schedule api",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production && npm run build && node ./build/index.js",
    "dev": "nodemon --watch server --exec babel-node -- index.js",
    "build": "npm run clean && npm run build-babel",
    "build-babel": "babel -d ./build ./server -s",
    "clean": "rm -rf build && mkdir build",
    "heroku-postbuild": "NODE_ENV=production && npm run dbreset",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --testTimeout=20000 --coverage --runInBand --forceExit",
    "migrate": "npx sequelize-cli db:migrate",
    "dbreset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
    "pretest": "cross-env NODE_ENV=test npx sequelize-cli db:migrate:undo:all && cross-env NODE_ENV=test npm run migrate",
    "coverage": "npm test && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint --fix api/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PascalUlor/task-schedule-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PascalUlor/task-schedule-api/issues"
  },
  "homepage": "https://github.com/PascalUlor/task-schedule-api#readme",
  "dependencies": {
    "@babel/polyfill": "^7.10.1",
    "app-root-path": "^3.0.0",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "regenerator-runtime": "^0.13.5",
    "sequelize": "^5.21.11",
    "validator": "^13.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "babel-register": "^6.26.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  }
}
